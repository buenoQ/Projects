main.py


import art
import game_data
import random
import os

#this functioion basically run the main functions of the game
def higher_lower(tracker):
    #cklears the terminal of previous print statemnt and prints logo
    os.system('cls||clear')
    print(art.logo)

    #checks if player has a score and if they do prints it
    if(tracker["score"] > 0):
        print(f"You're right! Current score: {tracker['score']}.")

    #asks if there was a previous B placement, if there was it goes with that value as the A option
    #if there wasn't a previous B placment, it generates a random number which is used to assign a value from the game_data list
    random_number = 0
    if(tracker["option_B_placement"] == -1):
        random_number = random.randint(0, len(game_data.data) - 1)
    else:
        random_number = tracker["option_B_placement"]

    #assigns the amount of followers A option has to a variable and prints information of A option
    A_followers = game_data.data[random_number]['follower_count']
    print(f"Compare A: {game_data.data[random_number]['name']}, a {game_data.data[random_number]['description']}, from {game_data.data[random_number]['country']}.")

    print(art.vs)

    #assigns the amount of followers B option has to a variable and prints information of B option
    random_number = random.randint(0, len(game_data.data) - 1)
    B_followers = game_data.data[random_number]['follower_count']
    print(f"Compare B: {game_data.data[random_number]['name']}, a {game_data.data[random_number]['description']}, from {game_data.data[random_number]['country']}.")

    player_choice = input("Who has more followers? Type 'A' or 'B': ").capitalize()

    #sees if A option followers is > B option followers and if the player chose option A then it assigns tracker["option_B _placment"] as the the placement of option B in the game_data list
    #after that it adds 1 to tracker["score"]  and then returns tracker
    if A_followers > B_followers and player_choice == 'A':
          tracker["option_B_placement"] = random_number
          tracker["score"] += 1
          return tracker

    #sees if B option followers is > A option followers and if the player chose option B then it assigns tracker["option_B _placment"] as the the placement of option B in the game_data list
    #after that it adds 1 to tracker["score"]  and then returns tracker
    elif B_followers > A_followers and player_choice == 'B':
        tracker["option_B_placement"] = random_number
        tracker["score"] += 1
        return tracker

    #if players gets answer wrong then it asings tracker["option_B_placement"] as -20
    else:
        tracker["option_B_placement"] = -20
        return tracker
              
tracker = {
  "option_B_placement" : -1,
  "score" : 0
}             

#the game will keep running until tracker["option_B_placement"]  is equal to -20, whiich then after that it will end
while(tracker["option_B_placement"] != -20):
    tracker = higher_lower(tracker)

#game over stuff
os.system('cls||clear')
print(art.logo)
print(f"Sorry, that's wrong. Final score: {tracker['score']}")








